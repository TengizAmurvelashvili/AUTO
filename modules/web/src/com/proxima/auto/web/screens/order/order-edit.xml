<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.proxima.auto.web.screens.order">
    <data>
        <instance id="orderDc"
                  class="com.proxima.auto.entity.Order"
                  view="order-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="orderDc">
            <column width="250px">
                <textArea id="orderNumberField" property="orderNumber" rows="1" textChangeTimeout="400"
                          editable="false" datatype="string"/>
                <pickerField id="carField" property="car">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="customerField" property="customer">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="priceField" property="price"/>
                <checkBox dataContainer="orderDc" property="isPaid"/>
                <pickerField id="managerField" property="manager">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
