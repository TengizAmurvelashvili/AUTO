<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.proxima.auto.web.screens.option">
    <data>
        <instance id="optionDc"
                  class="com.proxima.auto.entity.Option"
                  view="option-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="optionDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="priceField" property="price"/>
                <lookupField id="carTypeField" property="carType"/>
                <textArea id="noteField" property="note" rows="5"/>
                <pickerField id="modelField" property="model">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
